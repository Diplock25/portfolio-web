---
import "@fontsource-variable/azeret-mono";
import MapPinIcon from "@/components/svgs/MapPinIcon.astro";
import PhoneCall from "@/components/svgs/PhoneCall.astro";
import UserIcon from "@/components/svgs/UserIcon.astro";
import EmailIcon from "@/components/svgs/EmailIcon.astro";
import PointIcon from "@/components/svgs/PointIcon.astro";

const info = {
  fullname: "Dante Vilchez",
  role: "FullStack Developer",
  email: "softwareprogramando@gmail.com",
  phone: "+51 948137905",
  addrees: "Lima, Per√∫",
};
---

<section class="bg-none fixed -z-10 grid place-items-center h-screen w-screen p-5">
  <div
    class="relative grid areas h-[560px] aspect-card-h sm:px-2 md:p-4 lg:p-6 overflow-hidden sm:max-w-[1200px] sm:w-full sm:h-auto sm:aspect-card bg-white rounded-xl md:rounded-2xl shadow hover:bg-gray-100 dark:bg-slate-900 dark:border-gray-700 dark:hover:bg-slate-900"
  > 
    <!--
      vertical: barra horizontal inferior derecha
      horizontal: barra vertical centrado al ancho de la card(tarjeta)
    -->
    <div
      class="hidden absolute bottom-0 right-0 w-[20%] h-[2.5%] rounded-md bg-blue-gradient
      sm:block sm:top-1/2 sm:left-1/2 sm:-translate-x-1/2 sm:-translate-y-[50%] sm:h-[53%] md:h-1/2 sm:w-[6%]"
    >
    </div>
    <header class="area-data-1 relative">
      <div class="absolute w-full bottom-[10%] sm:bottom-[18%]">
        <div class="relative w-full flex items-center sm:flex-row-reverse">
          <span
            class="flex items-center justify-center rounded-r-full bg-blue-gradient p-2 pr-3 sm:bg-none sm:rounded-full sm:p-0 sm:translate-x-[50%]"
          >
            <UserIcon class="text-white w-6 md:w-7 lg:w-9" />
          </span>
          
          <h1
            class="absolute left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-bold tracking-tighter text-gray-900 dark:text-white text-3xl md:text-4xl"
          >
            {info.fullname}
          </h1>
        </div>
        <h2
          class="text-xl text-center px-6 text-slate-600 dark:text-gray-300 sm:text-xl md:text-2xl"
        >
          FullStack Developer
        </h2>
      </div>
    </header>
    <aside
      class="area-data-2 flex flex-col gap-2 font-normal text-gray-700 dark:text-gray-400 sm:gap-[8%]"
    >
      <div class="relative w-full flex items-center sm:flex-row-reverse">
        <span
          class="clip-path flex items-center justify-center pl-3 pr-5 py-3 bg-blue-gradient sm:bg-transparent sm:rounded-full sm:p-0 sm:translate-x-[50%]"
        >
          <EmailIcon class="text-white w-6 lg:w-9" />
        </span>
        <div
          class="w-1/2 overflow-hidden absolute top-1/2 left-20 -translate-y-1/2"
        >
          <p class="text-lg">{info.email}</p>
        </div>
      </div>
      <div class="relative w-full flex items-center sm:flex-row-reverse">
        <span
          class="clip-path flex items-center justify-center pl-3 pr-5 py-3 bg-blue-gradient sm:bg-transparent sm:rounded-full sm:p-0 sm:translate-x-[50%]"
        >
          <PhoneCall class="text-white w-6 lg:w-9" />
        </span>
        <div class="w-max absolute top-1/2 left-20 -translate-y-1/2">
          <p class="text-lg">{info.phone}</p>
        </div>
      </div>
      <div class="relative w-full flex items-center sm:flex-row-reverse">
        <span
          class="clip-path flex items-center justify-center pl-3 pr-5 py-3 bg-blue-gradient sm:bg-transparent sm:rounded-full sm:p-0 sm:translate-x-[50%]"
        >
          <MapPinIcon class="text-white w-6 lg:w-9" />
        </span>
        <div class="w-max absolute top-1/2 left-20 -translate-y-1/2">
          <p class="text-lg">{info.addrees}</p>
        </div>
      </div>
      <div class="w-full"> 
        <span class="w-max mx-auto flex items-center gap-1 bg-blue-100 text-blue-gradient text-sm font-medium px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border-2 border-blue-gradient">
          <PointIcon class="h-4"/>
          Available by hire
        
        </span>
      </div>
    </aside>
    <figure class="area-image py-3 flex items-center">
      <div
        class="h-full rounded-lg overflow-hidden aspect-square sm:h-auto sm:size-60 md:size-72 lg:size-96 mx-auto"
      >
        <img
          class="h-full"
          src="https://img.asmedia.epimg.net/resizer/v2/TEYKMK7I4FFAXL44K6UOHM6ZYI.jpg?auth=002623d04e253e84a3004dd27671ca25c2e0875722c8d7e27312946b44ecd79a"
          alt="photo Dante's"
        />
      </div>
    </figure>
  </div>
</section>

<style is:inline>
  section > div {
    background: linear-gradient(to right, #071332, #15293d); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  }

  .clip-path {
    clip-path: polygon(0 0, 78% 0, 100% 100%, 0% 100%);
  }

  .areas {
    grid-template-rows: 1fr 2fr 2fr;
    grid-template-areas:
      "data1"
      "image"
      "data2";
  }

  .area-data-1 {
    grid-area: data1;
  }

  .area-data-2 {
    grid-area: data2;
  }

  .area-image {
    overflow: hidden;
    grid-area: image;
  }

  h1 {
    font-family: "Azeret Mono Variable", monospace;
    position: relative;
    width: max-content;
    background: #0479FF;
    background: linear-gradient(to left, #0479FF 0%, #00CCFF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;


  }

  h1::before {
    content: "";
    position: absolute;
    right: 0;
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgb(15 23 42 / var(--tw-bg-opacity));
    animation: typing 0.6s steps(12) forwards;
    animation-delay: 0.3s;
  }

  @media (width >= 640px) {
    .areas {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: .9fr 1fr;
      grid-template-areas:
        "data1 image"
        "data2 image";
    }

    .clip-path {
      clip-path: none;
    }
    
    .area-image {
      padding-left: 8%;
    }
  }

  @keyframes typing {
    0 {
      width: 100%;
    }
    100% {
      width: 0;
    }
  }

  a {
    transform: scale3d(0.9);
  }
</style>
