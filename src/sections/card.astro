---
import "@fontsource-variable/azeret-mono";
import Email from "@/components/svgs/EmailIcon.astro";

const info = {
  email: "softwareprogramando@gmail.com",
  Phone: "+51 948137905",
  addrees: "Lima, Per√∫",
};
---

<section class="fixed grid place-items-center h-screen w-screen p-5">
  <div
    class="relative grid areas h-[560px] aspect-card-h p-6 overflow-hidden sm:max-w-[1200px] sm:w-full sm:h-auto sm:aspect-card bg-white rounded-xl md:rounded-2xl shadow hover:bg-gray-100 dark:bg-slate-900 dark:border-gray-700 dark:hover:bg-slate-900"
  >
  <div class="absolute text-white flex flex-col justify-around px-1 left-0 bottom-0 w-[4%] h-3/5">
    <span class="bg-blue-gradient">
      <Email class="w-full aspect-square" />
    </span>
    <span class="bg-blue-gradient">
      <Email />
    </span>
    <span class="bg-blue-gradient">
      <Email />
    </span>
  </div>    
    <header class="area-data-1 relative">
      <div class="absolute w-max bottom-[10%] left-1/2 -translate-x-1/2">
        <h1
          class="gap-2 mb-2 font-bold tracking-tighter text-gray-900 dark:text-white text-3xl md:text-4xl"
        >
          Dante Vilchez
        </h1>
        <h2 class="text-xl px-6 text-slate-600 dark:text-gray-300 sm:text-2xl">
          FullStack Developer
        </h2>
      </div>
    </header>
    <aside
      class="area-data-2 font-normal text-gray-700 dark:text-gray-400"
    >
      <div class="">
        <div class="block max-w-20 w-full">
          <span>$Email</span>
          <span class="ml-auto">:</span>
        </div>
        <span class="block ml-auto">softwareprogramando@gmail.com</span>
      </div>
      <div class="w-full">
        <div class="inline-block max-w-20">
          <span class="">$Phone</span>
          <span class="">:</span>
        </div>
        <span class="block">948137905</span>
      </div>
      <a
        href="#contact"
        class="flex items-center gap-2 w-max bg-green-100 text-green-800 font-medium my-3 text-base me-2 px-2.5 py-0.5 rounded-xl dark:bg-gray-700 dark:text-green-400 border border-green-400"
      >
        <span class="block border size-2 border-green-400 rounded-full"></span>
        <span>Available for hire</span></a
      >
    </aside>
    <figure class="area-image flex items-center">
      <div
        class="w-52 aspect-square sm:w-60 md:w-72 lg:size-96 bg-white mx-auto"
      >
        <img
          class="w-full"
          src="https://img.asmedia.epimg.net/resizer/v2/TEYKMK7I4FFAXL44K6UOHM6ZYI.jpg?auth=002623d04e253e84a3004dd27671ca25c2e0875722c8d7e27312946b44ecd79a&width=1200&height=1200&smart=true"
          alt="photo Dante's"
        />
      </div>
    </figure>
  </div>
</section>

<style is:inline>
  .areas {
    grid-template-rows: 1fr 2fr 2fr;
    grid-template-areas:
      "data1"
      "image"
      "data2";
  }

  .area-data-1 {
    overflow: hidden;
    grid-area: data1;
  }

  .area-data-2 {
    overflow: hidden;
    grid-area: data2;
  }

  .area-image {
    overflow: hidden;
    grid-area: image;
  }

  h1 {
    font-family: "Azeret Mono Variable", monospace;
    position: relative;
    width: max-content;
  }
  
  h1::before {
    content: "";
    position: absolute;
    right: 0;
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgb(15 23 42 / var(--tw-bg-opacity));
    animation: typing 0.6s steps(12) forwards;
    animation-delay: 0.3s;
  }

  @media (width >= 640px) {
    .areas {
    grid-template-rows: 1fr 1fr;
    grid-template-areas: 
    "data1 image"
    "data2 image";
  }
  }


  @keyframes typing {
    0 {
      width: 100%;
    }
    100% {
      width: 0;
    }
  }

  a {
    transform: scale3d(0.9);
  }
</style>
